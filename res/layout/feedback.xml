<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee" >
    
	<RelativeLayout
        android:id="@+id/navagitlayout"
        style="@style/titlebar" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/feedback_back"
            style="@style/backimg"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <ImageView 
            android:layout_alignParentBottom="true"
            style="@style/title_divider"/>
    </RelativeLayout>
    
	<EditText 
	    android:layout_height="130dp"
	    android:layout_width="match_parent"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginTop="8dp"
	    android:hint="用的不爽，说两句"
	    android:gravity="top|left"
	    android:padding="5dp"
	    android:id="@+id/feedback_text"
	    android:background="#ffffff"/>
	
	<LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:orientation="horizontal"
	    android:layout_marginTop="13dp">
	    <Button 
	        android:id="@+id/feedback_sure"
	        android:layout_height="26dp"
	        android:layout_width="95dp"
	        android:text="确认"
	        android:background="@drawable/new_login"
	        android:textColor="#ffffff"/>
	    
	    <Button 
	        android:id="@+id/feedback_cancle"
	        android:layout_height="26dp"
	        android:layout_width="95dp"
	        android:text="清空"
	        android:textColor="#ffffff"
	        android:background="@drawable/new_resign"
	        android:layout_marginLeft="50dp"/>
	</LinearLayout>
	
</LinearLayout>
