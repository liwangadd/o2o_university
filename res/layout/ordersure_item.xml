<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingTop="8dp"
    android:paddingBottom="8dp" >

    <ImageView
        android:id="@+id/img_ordersure"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/kfc"
        android:background="@drawable/dish_strick"
        android:padding="1dp" />

    <TextView
        android:id="@+id/tx_ordersureitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/img_ordersure"
        android:text="肯德基糖醋里脊盖饭"
        android:textColor="#666"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tx_ordersure_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_ordersure"
        android:layout_alignLeft="@id/tx_ordersureitem_name"
        android:layout_marginBottom="4dp"
        android:text="￥20.00"
        android:textColor="#ef5b51"
        android:textSize="18sp" />
    
    <TextView 
        android:id="@+id/sure_item_count"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/img_ordersure"
        android:textSize="19sp"
        android:text="1份"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="11dp"/>

</RelativeLayout>