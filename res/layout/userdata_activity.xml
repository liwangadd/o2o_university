<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".UserDataActivity" >

    <RelativeLayout
        android:id="@+id/navagitlayout"
        style="@style/titlebar"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/userdata_back"
            style="@style/backimg"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/save"
            android:textSize="20sp" />

        <ImageView
            style="@style/title_divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/navagitlayout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/user_name"
        android:hint="请输入用户姓名"
        android:paddingLeft="60dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/user_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_school"
        android:gravity="center_vertical"
        android:paddingLeft="60dp"
        android:text="点击选择学校" />

    <Button
        android:id="@+id/user_college"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_school"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_college"
        android:gravity="center_vertical"
        android:paddingLeft="60dp"
        android:text="点击选择专业" />

</RelativeLayout>