<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="titlebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#fafafa</item>
    </style>

    <style name="titleicon">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="backimg">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:src">@drawable/new_backing</item>
    </style>

    <style name="titletext" parent="titleicon">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="title_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/new_divider</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="dialogstyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--
        e
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="titleedit" parent="titleicon">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#eee</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="detailtext">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="progressbar_style1">
        <item name="android:maxWidth">60.0dip</item>
        <item name="android:maxHeight">60.0dip</item>
        <item name="android:indeterminateDrawable">@animator/haha</item>
        <item name="android:minWidth">60.0dip</item>
        <item name="android:minHeight">60.0dip</item>
    </style>
    <!-- Application theme. -->

</resources>